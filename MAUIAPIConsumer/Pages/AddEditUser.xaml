<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIAPIConsumer.Pages.AddEditUser"
             Title="AddEditUser">
    <VerticalStackLayout Padding="10">
        <Entry x:Name="txtName" Placeholder="Name" />
        <Entry x:Name="txtLastName" Placeholder="Last Name" />
        <Entry x:Name="txtEmail" Placeholder="Email" />
        <Button x:Name="btnAdd" Text="Add" Clicked="btnAdd_click" />
        <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" />
    </VerticalStackLayout>
</ContentPage>